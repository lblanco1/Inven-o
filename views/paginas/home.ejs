<%- contentFor('body') %>

<!-- Começa carrousel-->
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="montanharussa2.jpg" alt="First slide" style="height: 400px;">
        <div class="carousel-caption d-none d-md-block">
          <h2 style="font-family:Impact, fantasy; color:green;">Não perca tempo garanta ja o seu ingresso.</h2>
          <p style="color:red; ">Promoções validas enquanto durar os estoques</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="parques2.jpg" alt="Second slide" style="height: 400px;">
        <div class="carousel-caption d-none d-md-block">
          <h2 style="font-family:Impact, fantasy; color:gold;">Venha se divertir você e sua familia!</h2>
          <p style="color:gold; font-family:Comic Sans MS, Comic Sans, cursive"> Promoções validas enquanto durar os estoques.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="slidercopa.jpg" alt="Third slide" style="height: 400px;">
        <div class="carousel-caption d-none d-md-block">
          <h2 style="font-family:Comic Sans MS, Comic Sans, cursive; color:gold;">Grandes promoçoes imperdiveis, Nao deixe para ultima hora</h2>
          <p style="color:red; font-family:Comic Sans MS, Comic Sans, cursive"> Promoções validas enquanto durar os estoques.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="roda.jpg" alt="Second slide" style="height: 400px;">
        <div class="carousel-caption d-none d-md-block">
          <h2 style="font-family:Impact, fantasy; color:black;">Venha se divertir você e sua familia!</h2>
          <p style="color:red; font-family:Comic Sans MS, Comic Sans, cursive"> Promoções validas enquanto durar os estoques.</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <!-- Fim de carrousel-->
  
  <div class="jumbotron">
    <!-- Linha 1 do card -->
    <div class="card-deck" style=" margin-left:20px" ;>
      <% for (var i = 0; i <listaDeIngressos.length; i++){ %>
        <div class="card text-center p-3">
            <a href="/carrinho/<%=listaDeIngressos[i].id%>">
              <img class="card-img-top" src="<%= listaDeIngressos[i].imagem%>" alt="Card image cap">
              <div class="card-body">
            </a>
            <h5 class="card-title"><%= listaDeIngressos[i].titulo %></h5>
            <p class="card-text"><%= listaDeIngressos[i].descricao%></p>
        </div>
          <div class="card-body">
            <p class="lead">
              <!--<p style="font-size:20px">De <s>R$150,59</s> Por</p>-->
              <a class="btn btn-secondary btn-lg" href="/carrinho/<%=listaDeIngressos[i].id%>" role="button">Ver Detalhes>></a>
            </p>
          </div>
    </div>
      <% } %>
      
